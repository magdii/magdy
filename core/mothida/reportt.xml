<openerp>
<data>
    <report
        id="report_sessionn"
        model="sale.order"
        string="Report Elmothida"
        name="mothida.report_session_vieww"
        file="mothida.report_sessionn"
        report_type="qweb-pdf" />

<template id="report_session_vieww">
     <t t-call="report.html_container">
          <t t-set="x" t-value="0" />
          <t t-foreach="docs" t-as="o">
                <t t-set="emp_count" t-value="0"/>
                 <div class="page" dir="rtl">
                    <style type="text/css">
                        .td-y {
                        border: 1px solid #32CD32;
                        text-align: center;
                        font-family:Droid Arabic Naskh,serif;
                        }
                        .th-x{
                        font-family:Droid Arabic Naskh,serif;
                        <!--background-color: #32CD32 !important;-->
                        border: 1px solid #32CD32;
                        text-align: center;
                        }
                        .strong-x{
                        border:none;
                        text-align: center;
                        }


                    </style>

                    <table>
                         <tbody>


                                <td  style="border-color:#32CD32;text-align: center;" class="td-y" width="225">
                                    <!--<span t-field="o.salary" />-->
                                  <h3>
                                      <img src='/hr_penalties/static/src/img/new.png' style="max-height: 100%;"/>
                                  </h3>
                                </td>

                                <td  style="border-color:#32CD32;text-align: center;" class="td-y" width="225">

                                    <h3>رقم الفاتوره</h3>
                                    <h3><span t-field="o.name" /></h3>


                                </td>
                             <td  style="border-color:#32CD32;text-align: center;" class="td-y" width="225">

                                    <h3>التاريخ :

                                        <t t-raw="datetime.datetime.now()" t-field-options='{"format": "dd-MMM-yyyy"}' />
                                        <!--<span t-field="o.date" />-->
                                    </h3>
                                    <!--<h3>الساعه : </h3>-->
                                    <h3>
                                        <ul class="list-inline">
                                            <li>رقم الصفحه :</li>
                                            <li><span class="page"/></li>
                                               <t t-set="x" t-value="x+1" />
                                            <li>
                                                <span t-esc="x"/>
                                            </li>
                                        </ul>
                                    </h3>


                                </td>
                             <td  style="border-color:#32CD32;text-align: center;" class="td-y" width="225">

                                    <h3>رقم المندوب</h3>
                                 <h3>اسم المندوب:
                                  <span t-field="o.partner_id"/>
                                 </h3>

                                </td>




                        </tbody>
                    </table>

                    <h3 style="text-align:center;">بيانات العمال</h3>
                    <table class='table table-bordered ' style="border-color:#32CD32 " width="100%">
                        <thead style="border-color:#32CD32">
                            <th style="border-color:#32CD32;text-align: center;" class="th-x">م</th>
                            <th style="border-color:#32CD32;text-align: center;" class="th-x">كود الصنف</th>
                            <th style="border-color:#32CD32 ;text-align: center;" class="th-x" width="300" >البيان</th>
                            <th style="border-color:#32CD32;text-align: center;" class="th-x">الكميه </th>
                            <th style="border-color:#32CD32;text-align: center;" class="th-x"> سعر الوحده</th>
                            <!--<th style="border-color:#32CD32;text-align: center;" class="th-x"> الخصم</th>-->
                            <th style="border-color:#32CD32;text-align: center;" class="th-x">المبلغ</th>
                            <!--<th style="border-color:#32CD32;text-align: center;" class="th-x">ااجمالى السعر</th>-->

                        </thead>
                        <tbody>
                            <t t-foreach="o.order_line" t-as="employee_data">
                                <tr>
                                    <t t-set="emp_count" t-value="emp_count+1"/>
                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-esc="emp_count"/>
                                    </td>
                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-field="employee_data.product_id.default_code"/>
                                    </td>
                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-field="employee_data.name"/>
                                    </td>
                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-field="employee_data.product_uom_qty"/>
                                        <span t-field="employee_data.product_uom"/>
                                    </td>
                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-field="employee_data.price_unit"/>
                                    </td>

                                        <!--<td class="td-y" style="border-color:#32CD32;text-align: center;">-->
                                            <!--<t t-foreach="employee_data.product_id.taxes_id" t-as="t">-->
                                               <!--<span t-field="t.taxes_id"/>-->
                                            <!--</t>-->
                                        <!--</td>-->

                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-field="employee_data.price_subtotal"/>
                                    </td>



                                </tr>
                                <!--<tr>-->
                                    <!--<td class="td-y" style="border-color:#32CD32;text-align: right;">-->
                                        <!--<h3> الاجمالى :  </h3>-->
                                        <!--<span t-field="employee_data.price_total"/>-->
                                    <!--</td>-->
                                <!--</tr>-->

                            </t>
                        </tbody>
                        <thead class="td-x" style="border-color:#32CD32;text-align: right;">
                                <tr>
                                    <th >الاجمالى</th>
                                    <th >
                                        <span t-esc="o.amount_total"/>
                                    </th>
                                </tr>
                            </thead>


                    </table>

                    <table>
                         <tbody>


                                <td  style="border-color:#32CD32;text-align: right;padding-right:10px;" class="td-y ; oe_inline" width="600">

                                    <h3>اعتماد المستوده : </h3>
                                    <h3 >الاسم : </h3>
                                    <h3 >التوقيع : </h3>

                                </td>

                                <td  style="border-color:#32CD32;text-align: right;padding-right:10px;" class="td-y" width="400">


                                    <group>
                                        <div class="oe_inline">
                                            <h3 style="width: 33%" >الاجمالى :

                                            </h3>
                                            <h3 style="width: 33%">اسم المستلم : </h3>
                                            <h3 style="width: 33%">التوقيع : </h3>
                                        </div>
                                    </group>


                                </td>


                        </tbody>
                    </table>
                </div>
         </t>
</t>


</template>

<template id="report_saleorder">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'sale.report_saleorder_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
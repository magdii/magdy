<odoo>
    <data>
        <report
                id="sales_bill_report"
                model="account.invoice"
                string="فاتورة باور"
                name="mazaya_accounting.sales_bill_report_view"
                file="mazaya_accounting.sales_bill_report"
                report_type="qweb-pdf"/>


        <template id="sales_bill_report_view">
            <t t-call="report.html_container">
                <t t-set="emp_count" t-value="0"/>
                <t t-set="total" t-value="0"/>
                <t t-foreach="docs" t-as="doc">
                    <t t-call="report.external_layout">
                        <div class="page" dir="rtl">
                            <style type="text/css">
                                .td-y {
                                border: 1px solid black;
                                text-align: center;
                                font-family:Droid Arabic Naskh,serif;
                                }
                                .th-x{

                                <!--background-color: #cfc9ca !important;-->
                                border: 1px solid black;
                                text-align: center;
                                }
                                .strong-x{
                                border:none;
                                text-align: center;
                                }
                            </style>
                            <p style="text-align:right;font-size:20px;">
                                <span>
                                    <p>ماموريه ضرائب المركز الضريبى لكبار الممولين</p>
                                    <p>مدينه نصر(ملف 280 - 06 -05 )</p>
                                    <p>رقم تسجيل 27. - 261 -100</p>
                                </span>

                            </p>
                            <p style="text-align:center;font-size:20px;">
                                <span>فاتوره مبيعات رقم<span t-field="doc.number"/></span>
                            </p>
                            <table>
                                <tr>
                                    <td colspan="3">التاريخ<span t-field="doc.date_invoice"/></td>
                                    <td></td>
                                    <td></td>
                                    <td style="dir : rtl;">رقم العميل<span t-field="doc.name"/></td>
                                </tr>
                                <tr>
                                    <td>اسم العميل<span t-field="doc.partner_id.name"/></td>
                                </tr>
                                <tr>
                                    <td>العنوان<span t-field="doc.partner_id.street"/></td>
                                </tr>

                            </table>
                            <table class='table table-bordered ' width="100%">
                                <!--style="background-color: #cfc9ca !important;"-->
                                <thead >
                                    <tr>

                                        <!--<th class="th-x">م</th>-->
                                        <th class="th-x">موديل</th>
                                        <th class="th-x">الكمية</th>
                                        <!--<th class="th-x">التكلفة</th>-->
                                        <th class="th-x">الاجمالى</th>
                                    </tr>
                                </thead>
                                <!--class="sale_tbody"-->
                                <tbody >
                                    <t t-foreach="doc.invoice_line_ids" t-as="l">
                                        <!--<t t-foreach="l.receive_order_ids" t-as="internal_line">-->
                                            <tr>
                                                <!--<t t-set="emp_count" t-value="emp_count+1"/>-->
                                                <!--<t t-set="total" t-value="total+internal_line.cost"/>-->
                                                <!--<td class="td-y">-->
                                                    <!--<span t-esc="emp_count"/>-->
                                                <!--</td>-->
                                                <td class="td-y">
                                                    <span t-field="l.name"/>
                                                </td>
                                                <td class="td-y">
                                                    <span t-field="l.quantity"/>
                                                </td>
                                                <td class="td-y">
                                                    <span />
                                                </td>
                                                <!--<td class="td-y">-->
                                                    <!--<span t-field="internal_line.qty"/>-->
                                                <!--</td>-->
                                                <!--<td class="td-y">-->
                                                    <!--<span t-field="internal_line.uint_cost"/>-->
                                                <!--</td>-->
                                                <!--<td class="td-y">-->
                                                    <!--<span t-field="internal_line.cost"/>-->
                                                <!--</td>-->

                                            </tr>
                                        </t>
                                    <tr>
                                        <!--<td class="td-y">-->

                                        <!--</td>-->
                                        <td class="td-y" colspan="2">
                                            <span >الاجهزه</span>
                                        </td>
                                        <td class="td-y">
                                            <span t-field="doc.invoice_devices"/>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="td-y" colspan="2">
                                            <span >ضريبه الجدول 8%</span>
                                        </td>
                                        <td class="td-y">
                                            <span t-field="doc.table_tax_per"/>
                                        </td>
                                    </tr>

                                    <tr>
                                       <td class="td-y" colspan="2">
                                            <span>الاجمالي</span>
                                        </td>
                                        <td class="td-y">
                                            <span t-field="doc.total_with_table_tax"/>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="td-y" colspan="2">
                                            <span>كابولي ونقل وتركيب وضمان</span>
                                        </td>
                                        <td class="td-y">
                                            <span t-field="doc.total_services"/>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="td-y" colspan="2">
                                            <span>الاجمالي</span>
                                        </td>
                                        <td class="td-y">
                                            <span t-field="doc.total_with_services"/>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="td-y" colspan="2">
                                           <span>ضريبه القيمه المضافه 14%</span>
                                        </td>
                                        <td class="td-y">
                                            <span t-field="doc.added_value_tax_per"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="td-y" colspan="2">
                                           <span>اجمالى الفاتوره</span>
                                        </td>
                                        <td class="td-y">
                                            <span t-field="doc.total_invoice"/>
                                        </td>
                                    </tr>

                                </tbody>
                                <!--<thead style="background-color: #cfc9ca !important;">-->
                                    <!--<tr>-->

                                        <!--<td class="th-x" colspan="2">الاجمالى</td>-->
                                        <!--<td class="th-x">-->
                                            <!--&lt;!&ndash;<span t-esc="total"/>&ndash;&gt;-->
                                        <!--</td>-->
                                    <!--</tr>-->
                                <!--</thead>-->
                            </table>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <td><p>قسم حسابات العملاء</p></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td colspan="3"><p>الاداره</p></td>
                                    </tr>
                                </thead>
                            </table>
                            <div dir="ltr">
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>


    </data>
</odoo>